<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">
    <!--主界面-->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dandanplay.tv.ui.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_bangumiDetailsFragment"
            app:destination="@id/bangumiDetailsFragment"
            app:popUpTo="@+id/homeFragment" />
    </fragment>
    <!--番剧详细页-->
    <fragment
        android:id="@+id/bangumiDetailsFragment"
        android:name="com.dandanplay.tv.ui.bangumi.BangumiDetailsFragment"
        android:label="BangumiDetailsFragment">
<!--        <argument-->
<!--            android:name="intro"-->
<!--            app:argType="com.seiko.domain.entities.BangumiIntro"/>-->
        <argument
            android:name="animeId"
            app:argType="integer"/>
        <action android:id="@+id/action_bangumiDetailsFragment_to_episodesSearchFragment"
            app:destination="@id/episodesSearchFragment"
            app:popUpTo="@id/bangumiDetailsFragment"/>
        <action
            android:id="@+id/action_bangumiDetailsFragment_related_videos"
            app:destination="@id/bangumiDetailsFragment"
            app:popUpTo="@+id/bangumiDetailsFragment"
            app:enterAnim="@anim/anim_activity_enter"
            app:exitAnim="@anim/anim_activity_exit"
            app:popEnterAnim="@anim/anim_activity_enter"
            app:popExitAnim="@anim/anim_activity_exit"/>
    </fragment>
    <fragment
        android:id="@+id/episodesSearchFragment"
        android:name="com.dandanplay.tv.ui.bangumi.EpisodesSearchFragment"
        android:label="EpisodesSearchFragment">
        <argument
            android:name="keyword"
            app:argType="string"/>
    </fragment>
    <!--启动界面-->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dandanplay.tv.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <!--
        清空回退栈: app:popUpTo="@id/navigation"
                   app:popUpToInclusive="true"
         -->
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>