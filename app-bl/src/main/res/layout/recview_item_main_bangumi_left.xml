<?xml version="1.0" encoding="utf-8"?>
<com.dandanplay.tv2.widget.DrawLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/frame"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="@dimen/px_240"
    android:layout_height="@dimen/px_120">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo"
        android:focusable="false"
        android:layout_width="@dimen/px_58"
        android:layout_height="@dimen/px_58"
        android:layout_marginStart="@dimen/px_18"
        android:contentDescription="@string/app_name" />
    <com.dandanplay.tv2.widget.ShadowTextView
        android:textSize="@dimen/px_36"
        android:textColor="@color/white"
        android:id="@+id/name"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_18"
        android:layout_marginRight="@dimen/px_18"
        android:singleLine="true" />
</com.dandanplay.tv2.widget.DrawLinearLayout>