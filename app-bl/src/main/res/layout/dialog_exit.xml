<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black_60"
    android:padding="@dimen/px_40"
    android:focusable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.dandanplay.tv2.widget.ShadowTextView
        android:textSize="@dimen/px_48"
        android:textColor="@color/white_80"
        android:gravity="center"
        android:id="@id/title"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_100"
        android:lineSpacingExtra="@dimen/px_40" />
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/filter_dialog_container"
        android:padding="@dimen/px_20"
        android:focusable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20">
        <com.dandanplay.tv2.widget.ShadowTextView
            android:textSize="@dimen/px_48"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/confirm_view"
            android:background="@drawable/background_white_rect"
            android:padding="@dimen/px_9"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/confirm_view"
            android:nextFocusRight="@id/cancel_view"
            android:nextFocusUp="@id/confirm_view"
            android:nextFocusDown="@id/confirm_view"
            android:layout_width="@dimen/px_330"
            android:layout_height="@dimen/px_98"
            android:layout_marginEnd="@dimen/px_30" />
        <com.dandanplay.tv2.widget.ShadowTextView
            android:textSize="@dimen/px_48"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/cancel_view"
            android:background="@drawable/background_white_rect"
            android:padding="@dimen/px_9"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/confirm_view"
            android:nextFocusRight="@id/cancel_view"
            android:nextFocusUp="@id/cancel_view"
            android:nextFocusDown="@id/cancel_view"
            android:layout_width="@dimen/px_330"
            android:layout_height="@dimen/px_98"
            android:layout_marginStart="@dimen/px_30" />
    </LinearLayout>
</LinearLayout>